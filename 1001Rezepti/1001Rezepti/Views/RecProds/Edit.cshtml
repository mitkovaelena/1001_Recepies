@model _1001Rezepti.Models.RecProd

@{
    ViewData["Title"] = "Промени";
}

<h1>Промени грамаж на @Html.DisplayFor(model => model.Product.ProductName) в рецептата за @Html.DisplayFor(model => model.Recepie.RecepieName)</h1>
<hr />
<div class="row center_div">
    <div class="col-md-4 center_div text-center">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RecepieId" />
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Запази" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
