@model _1001Rezepti.Models.Recepie

@{
    ViewData["Title"] = "Добави рецепта";
}

<h1>Добави рецепта</h1>

<hr />
<div class="row center_div text-center">
    <div class="col-md-4 center_div text-center">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RecepieID" class="control-label"></label>
                <input asp-for="RecepieID" class="form-control" />
                <span asp-validation-for="RecepieID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecepieName" class="control-label"></label>
                <input asp-for="RecepieName" class="form-control" />
                <span asp-validation-for="RecepieName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="8"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label"></label>
                <input asp-for="ImagePath" class="form-control" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeToCook" class="control-label"></label>
                <input asp-for="TimeToCook" class="form-control" />
                <span asp-validation-for="TimeToCook" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Добави" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
