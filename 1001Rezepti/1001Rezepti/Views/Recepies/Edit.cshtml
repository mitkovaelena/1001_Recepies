@model _1001Rezepti.Models.Recepie

@{
    ViewData["Title"] = "Промени рецепта";
    ViewData["Background"] = "\"../../images/background.jpg\"";

}

<h1>Промени рецепта</h1>

<h4>
    @Html.DisplayFor(model => model.RecepieName)
</h4>
<hr />
<div class="row center_div">
    <div class="col-md-4 center_div">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RecepieID" />
            <div class="form-group">
                <label asp-for="RecepieName" class="control-label"></label>
                <input asp-for="RecepieName" class="form-control" />
                <span asp-validation-for="RecepieName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="8"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label"></label>
                <input asp-for="ImagePath" class="form-control" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeToCook" class="control-label"></label>
                <input asp-for="TimeToCook" class="form-control" />
                <span asp-validation-for="TimeToCook" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Запази" class="btn btn-primary" />
                <a asp-action="Create" asp-controller="RecProds" asp-route-recepieid="@Model.RecepieID" class="btn btn-warning">Добави продукт</a>
                <a asp-action="Delete" asp-route-id="@Model.RecepieID" class="btn btn-danger">Изтрий</a>
            </div>
        </form>
    </div>
</div>

<div class="center_div text-center">
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
