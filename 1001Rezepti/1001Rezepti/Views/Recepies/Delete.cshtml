@model _1001Rezepti.Models.Recepie

@{
    ViewData["Title"] = "Изтрий рецепта";
    ViewData["Background"] = "\"../../images/background.jpg\"";

}

<h1>Изтрий рецепта</h1>

<h3>Сигурни ли сте, че искате да изтриете рецептата?</h3>
<div class="center_div">
    <h4>
        @Html.DisplayFor(model => model.RecepieName)
    </h4>
    <hr />
    <dl class="row center_div">
        <dd class="col-sm-10 center_div text-center">
            @if (@Model.ImagePath != null)
            {
                <img style="width:500px" alt="@Model.RecepieName" src="~/images/@Model.ImagePath" asp-append-version="true" />
            }
            else
            {
                <img style="width:500px" alt="Няма снимка" src="~/images/noImg.jpg" asp-append-version="true" />
            }
        </dd>
        <dd class="col-sm-10 center_div text-center">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dd class="col-sm-10 center_div text-center">
            <strong>@Html.DisplayNameFor(model => model.TimeToCook) : </strong>
            @Html.DisplayFor(model => model.TimeToCook) мин.
        </dd>
    </dl>
    
    <form asp-action="Delete" class="text-center">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="RecepieID" />
        <input type="submit" value="Изтрий" class="btn btn-danger" />
    </form>
</div>
<div class="center_div text-center">
    <a asp-action="Index">Назад</a>
</div>
